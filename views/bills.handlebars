<link rel="stylesheet" href="/css/bills.css" />
<div class="col-lg-12 bills-container">
  <h3>
    Bills
  </h3>
<div class="groups-container">
  <button class="btn btn-primary add-group groupFormToggle" id="createGroup">Create a new group</button>
    <div class="group-form">
      <form class="upload-group animated fadeIn" id="createGroupForm">
        <div class="form-group track-name-block">
            <label for="group-name">Group Name</label>
            <input type="text" class="form-control" id="group-name" placeholder="Your group name">
        </div>
        <div class="form-group friends-block">
          <select class="select-friends">
          </select>
        </div>
        <button class="btn btn-primary submit-group" id="submitGroup">Create group</button>
      </form>
  </div>
</div>
</div>
